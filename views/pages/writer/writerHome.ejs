<!doctype html>
<html lang="en">
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>Create Blog | MyBlog</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
  body {
    background-color: #f4f6f9;
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
  }

  .blog-container {
    max-width: 850px;
    margin: 50px auto;
    background: #fff;
    border-radius: 16px;
    padding: 30px;
    box-shadow: 0 12px 30px rgba(0,0,0,0.08);
  }

  .page-title {
    font-weight: 700;
    font-size: 1.8rem;
    margin-bottom: 25px;
    text-align: center;
    color: #222;
  }

  .form-label {
    font-weight: 600;
    color: #333;
  }

  .form-control {
    border-radius: 10px;
    padding: 12px 14px;
    font-size: 15px;
  }

  .form-control:focus {
    border-color: #4b00ff;
    box-shadow: 0 0 6px rgba(75, 0, 255, 0.25);
  }

  textarea.form-control {
    resize: vertical;
    min-height: 180px;
  }

  .btn-publish {
    background: linear-gradient(90deg, #4b00ff, #7a3fff);
    border: none;
    padding: 12px 28px;
    border-radius: 12px;
    font-weight: 600;
    color: #fff;
    transition: 0.3s;
  }

  .btn-publish:hover {
    background: linear-gradient(90deg, #3a00cc, #662ee6);
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(75,0,255,0.3);
  }

  .back-link {
    text-decoration: none;
    font-weight: 500;
    color: #4b00ff;
    transition: 0.2s;
  }

  .back-link:hover {
    text-decoration: underline;
    color: #3200b8;
  }

  .blog-list {
    margin-top: 40px;
  }

  .blog-card {
    border: 1px solid #e9ecef;
    border-radius: 14px;
    padding: 18px 20px;
    margin-bottom: 18px;
    transition: 0.2s;
  }

  .blog-card:hover {
    box-shadow: 0 6px 18px rgba(0,0,0,0.08);
  }

  .blog-title {
    font-weight: 700;
    font-size: 1.2rem;
    color: #222;
    margin-bottom: 6px;
  }

  .blog-body {
    font-size: 0.95rem;
    color: #555;
    margin-bottom: 12px;
  }

  .btn-sm {
    padding: 6px 12px;
    border-radius: 8px;
    font-size: 0.85rem;
  }
</style>
</head>
<body>
<%- include('../../partials/header') %>

<main class="container">
  <div class="blog-container">
    <h2 class="page-title"> Create a New Blog Post</h2>

    <!-- Blog Form -->
    <form action="/posts" method="POST" enctype="multipart/form-data">
      <div class="mb-3">
        <label class="form-label">Title</label>
        <input name="title" class="form-control" placeholder="Enter blog title..." required>
      </div>
      <div class="mb-3">
        <label class="form-label">Cover Image</label>
        <input type="file" name="cover" class="form-control" accept="image/*">
        <div class="form-text">Upload JPG/PNG/WebP. Large images will be resized automatically.</div>
      </div>
      <div class="mb-3">
        <label class="form-label">Category</label>
        <select name="category" class="form-control" required>
          <option value="tech">Technology</option>
          <option value="lifestyle">Lifestyle</option>
          <option value="travel">Travel</option>
        </select>
      </div>
      <div class="mb-3">
        <label class="form-label">Content</label>
        <textarea name="body" class="form-control" placeholder="Write your blog content here..." required></textarea>
      </div>
      <div class="d-flex justify-content-between align-items-center">
        <a href="/blog" class="back-link">‚Üê Back to Feed</a>
        <button class="btn-publish" type="submit">üöÄ Publish Blog</button>
      </div>
    </form>

    <!-- My Blogs -->
    <div class="blog-list">
      <h4 class="fw-bold mb-3">üìö My Blogs</h4>

      <% if (posts && posts.length > 0) { %>
        <% posts.forEach(post => { %>
          <div class="blog-card">
            <div class="blog-title"><%= post.title %></div>
            <div class="blog-body"><%= post.body.substring(0, 120) %>...</div>
            <div class="d-flex gap-2">
              <a href="/posts/edit/<%= post._id %>" class="btn btn-warning btn-sm">‚úèÔ∏è Edit</a>
              <form action="/posts/delete/<%= post._id %>" method="POST" onsubmit="return confirm('Are you sure?');">
                <button class="btn btn-danger btn-sm">üóëÔ∏è Delete</button>
              </form>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-muted">You haven‚Äôt created any blogs yet.</p>
      <% } %>
    </div>
  </div>
</main>

<%- include('../../partials/footer') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
