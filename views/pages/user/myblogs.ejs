<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <title>My Blogs</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('../../partials/header') %>

  <main class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="mb-0">üìù My Blogs</h2>
      <a href="/user/profile" class="btn btn-secondary btn-sm">‚¨ÖÔ∏è Back to Profile</a>
    </div>

    <% if (posts.length === 0) { %>
      <div class="alert alert-info">
        You have not created any blog yet.
      </div>
    <% } else { %>
      <div class="row">
        <% posts.forEach(post => { %>
          <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100">
              <% if (post.coverUrl) { %>
                <img src="<%= post.coverUrl %>" class="card-img-top" alt="cover">
              <% } %>
              <div class="card-body">
                <h5 class="card-title"><%= post.title %></h5>
                <p class="card-text text-truncate"><%= post.body %></p>
                <p class="text-muted small mb-2">
                  <%= new Date(post.createdAt).toLocaleDateString() %>
                </p>
                <a href="/posts/<%= post._id %>" class="btn btn-primary btn-sm">Read More</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </main>

  <%- include('../../partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
