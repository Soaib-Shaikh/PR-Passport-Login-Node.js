<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>editUser</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/editUser.css">

    <style>
        body {
            background-color: #f4f6f9;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar {
            background-color: #ffffff !important;
            box-shadow: 0 3px 8px rgba(0, 0, 0, 0.15);
            padding: 12px 20px;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            color: #4b00ff !important;
        }

        .nav-link {
            font-weight: 500;
            margin-right: 15px;
            color: #333 !important;
        }

        .nav-link:hover {
            color: #4b00ff !important;
        }

        /* Edit Form Container */
        .edit-container {
            max-width: 650px;
            margin: 40px auto;
            background-color: #fff;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        .edit-container h2 {
            text-align: center;
            font-weight: 700;
            color: #222;
            margin-bottom: 20px;
        }

        .avatar-wrap {
            width: 160px;
            height: 160px;
            margin: 0 auto 14px;
            border-radius: 50%;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #f0f0ff, #fff);
            cursor: pointer;
            border: 6px solid #fff;
            box-shadow: 0 8px 30px rgba(75, 0, 255, 0.12);
        }

        .avatar-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
        }

        .avatar-letter {
            font-size: 64px;
            font-weight: 700;
            color: #4b00ff;
        }

        .form-label {
            font-weight: 600;
            color: #444;
        }

        .form-control {
            padding: 10px 12px;
            font-size: 15px;
            border-radius: 8px;
            border: 1px solid #ced4da;
        }

        .form-control:focus {
            border-color: #4b00ff;
            box-shadow: 0 0 6px rgba(75, 0, 255, 0.3);
        }

        /* Profile Image */
        .profile-pic {
            display: flex;
            justify-content: center;
            margin-bottom: 15px;
        }

        .profile-pic img {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #4b00ff;
        }

        .form-buttons {
            display: flex;
            justify-content: space-between;
            margin-top: 25px;
        }

        .form-buttons .btn {
            width: 48%;
            padding: 12px;
            font-weight: bold;
            border-radius: 8px;
            font-size: 16px;
        }
    </style>
</head>

<body>
    <%- include('../../partials/header') %>

        <main class="container my-4">
            <!-- Edit Profile Section -->
            <div class="container edit-container">
                <h2>Edit Your Profile</h2>

                <!-- Avatar Upload Form -->
                <form id="avatarForm" action="/profile/avatar" method="" enctype="multipart/form-data"
                    style="display:block;">
                    <input id="avatarInput" type="file" name="avatar" accept="image/*" style="display:none">
                    <label for="avatarInput" class="avatar-wrap" title="Click to change avatar">
                        <% if (user.avatarUrl) { %>
                            <img src="<%= user.avatarUrl %>" alt="avatar" class="avatar-img">
                            <% } else if (user.avatarLocal) { %>
                                <img src="/uploads/<%= user.avatarLocal %>" alt="avatar" class="avatar-img">
                                <% } else { %>
                                    <div class="avatar-letter">
                                        <%= (user.username && user.username[0]) ? user.username[0].toUpperCase() : 'U'
                                            %>
                                    </div>
                                    <% } %>
                    </label>
                </form>

                <!-- Profile Update Form -->
                <!-- Profile Update Form -->
                <form action="/profile/edit" method="POST">
                    <!-- Username -->
                    <div class="mb-3">
                        <label class="form-label">Username</label>
                        <input type="text" name="username" class="form-control" value="<%= user.username %>" required>
                    </div>

                    <!-- Full Name -->
                    <div class="mb-3">
                        <label class="form-label">Full Name</label>
                        <input type="text" name="fullName" class="form-control" value="<%= user.fullName || '' %>">
                    </div>

                    <!-- Email -->
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" name="email" class="form-control" value="<%= user.email %>" required>
                    </div>

                    <!-- Mobile -->
                    <div class="mb-3">
                        <label class="form-label">Mobile</label>
                        <input type="text" name="mobile" class="form-control" value="<%= user.mobile || '' %>">
                    </div>

                    <!-- Address -->
                    <div class="mb-3">
                        <label class="form-label">Address</label>
                        <textarea name="address" class="form-control" rows="2"><%= user.address || '' %></textarea>
                    </div>

                    <!-- âœ… Birthdate -->
                    <div class="mb-3">
                        <label class="form-label">Birthdate</label>
                        <input type="date" name="birthdate" class="form-control"
                            value="<%= user.birthdate ? user.birthdate.toISOString().substring(0,10) : '' %>">
                    </div>

                    <!-- âœ… Gender -->
                    <div class="mb-3">
                        <label class="form-label">Gender</label>
                        <select name="gender" class="form-control">
                            <option value="male" <%=user.gender==='male' ? 'selected' : '' %>>Male</option>
                            <option value="female" <%=user.gender==='female' ? 'selected' : '' %>>Female</option>
                            <option value="other" <%=user.gender==='other' ? 'selected' : '' %>>Other</option>
                        </select>
                    </div>

                    <!-- Buttons -->
                    <div class="form-buttons">
                        <button type="submit" class="btn btn-primary">ðŸ’¾ Save Changes</button>
                        <a href="/profile" class="btn btn-secondary">ðŸ”™ Cancel</a>
                    </div>
                </form>

            </div>
        </main>

        <%- include('../../partials/footer') %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>