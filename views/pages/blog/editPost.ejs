<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Edit Post</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background-color: #f4f6f9;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .edit-container {
      max-width: 750px;
      margin: 50px auto;
      background: #fff;
      padding: 35px;
      border-radius: 16px;
      box-shadow: 0 12px 30px rgba(0, 0, 0, 0.08);
    }

    h3 {
      font-weight: 700;
      color: #222;
    }

    .form-label {
      font-weight: 600;
      color: #444;
    }

    .form-control {
      border-radius: 10px;
      padding: 12px;
    }

    textarea.form-control {
      min-height: 150px;
      resize: vertical;
    }

    /* Preview Image */
    img.preview-img {
      max-height: 200px;
      border-radius: 12px;
      margin-top: 12px;
      box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
      object-fit: cover;
    }

    /* Buttons */
    .btn-update {
      background: linear-gradient(90deg, #4b00ff, #7a3fff);
      border: none;
      color: #fff;
      padding: 10px 24px;
      font-weight: 600;
      border-radius: 12px;
      transition: 0.3s;
    }

    .btn-update:hover {
      background: linear-gradient(90deg, #3700b3, #5a2bcc);
      transform: translateY(-2px);
    }

    .btn-cancel {
      background: #e0e0e0;
      border: none;
      color: #333;
      padding: 10px 24px;
      font-weight: 600;
      border-radius: 12px;
      transition: 0.3s;
    }

    .btn-cancel:hover {
      background: #ccc;
      transform: translateY(-2px);
    }
  </style>
</head>

<body>
  <%- include('../../partials/header') %>

    <main class="container">
      <div class="edit-container">
        <h3 class="text-center mb-4">Edit Blog Post</h3>

        <!-- Edit Form -->
        <form action="/posts/edit/<%= post._id %>" method="POST" enctype="multipart/form-data">

          <!-- Title -->
          <div class="mb-3">
            <label class="form-label">Title</label>
            <input type="text" name="title" class="form-control" value="<%= post.title %>" required>
          </div>

          <!-- Category -->
          <div class="mb-3">
            <label class="form-label">Category</label>
            <select name="category" class="form-control" required>
              <option value="tech" <%=post.category==='tech' ? 'selected' : '' %>>Technology</option>
              <option value="lifestyle" <%=post.category==='lifestyle' ? 'selected' : '' %>>Lifestyle</option>
              <option value="travel" <%=post.category==='travel' ? 'selected' : '' %>>Travel</option>
              <option value="travel" <%=post.category==='food' ? 'selected' : '' %>>Food</option>
            </select>
          </div>


          <!-- Body -->
          <div class="mb-3">
            <label class="form-label">Body</label>
            <textarea name="body" class="form-control" required><%= post.body %></textarea>
          </div>

          <!-- Cover Image -->
          <div class="mb-3">
            <label class="form-label">Change Cover Image</label>
            <input type="file" name="cover" class="form-control" id="coverInput" accept="image/*">

            <% if (post.coverUrl) { %>
              <img src="<%= post.coverUrl %>" id="preview" class="preview-img mt-2" alt="Cover Image">
              <% } else { %>
                <img id="preview" class="preview-img mt-2 d-none" alt="Preview">
                <% } %>
          </div>

          <!-- Buttons -->
          <div class="d-flex justify-content-between mt-4">
            <button class="btn-update">Update</button>
            <a href="/posts/<%= post._id %>" class="btn-cancel">Cancel</a>
          </div>
        </form>
      </div>
    </main>

    <!-- Live Preview Script -->
    <script>
      const coverInput = document.getElementById('coverInput');
      const preview = document.getElementById('preview');

      coverInput.addEventListener('change', function (event) {
        const file = event.target.files[0];
        if (file) {
          const reader = new FileReader();
          reader.onload = function (e) {
            preview.src = e.target.result;
            preview.classList.remove('d-none');
          }
          reader.readAsDataURL(file);
        }
      });
    </script>

    <%- include('../../partials/footer') %>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>