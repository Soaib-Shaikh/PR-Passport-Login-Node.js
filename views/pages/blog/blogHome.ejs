<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Blog Home</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .latest-post-card {
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 6px 18px rgba(0, 0, 0, .1);
      margin-bottom: 30px;
      overflow: hidden;
      transition: transform .2s;
    }

    .latest-post-card:hover {
      transform: translateY(-4px);
    }

    .latest-post-card img {
      width: 100%;
      height: 300px;
      object-fit: cover;
      display: block;
    }

    .latest-overlay {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      padding: 15px;
      background: rgba(0, 0, 0, 0.6);
      color: #fff;
    }

    .latest-overlay h2 {
      margin: 0;
      font-size: 1.5rem;
      font-weight: 700;
    }

    .latest-author {
      font-size: 0.9rem;
      margin-top: 4px;
    }

    .section-title {
      font-size: 1.8rem;
      font-weight: 700;
      margin: 20px 0 12px;
    }

    .post-card {
      position: relative;
      overflow: hidden;
      border-radius: 10px;
      box-shadow: 0 4px 14px rgba(0, 0, 0, .08);
      transition: transform .2s;
    }

    .post-card:hover {
      transform: translateY(-5px);
    }

    .post-card img {
      width: 100%;
      height: 200px;
      object-fit: cover;
      display: block;
    }

    .post-overlay {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      padding: 10px;
      background: rgba(0, 0, 0, .55);
      color: #fff;
      text-align: center;
    }
  </style>
</head>

<body>

  <!-- Header Partial -->
  <%- include('../../partials/header') %>

    <main class="container my-5">
      <% const sortedPosts=posts.sort((a, b)=> new Date(b.createdAt) - new Date(a.createdAt)); %>
        <% const latest=sortedPosts[0]; %>
          <% const others=sortedPosts.slice(1); %>

            <% if (latest) { %>
              <a href="/posts/<%= latest._id %>" class="text-decoration-none">
                <div class="latest-post-card position-relative">
                  <img src="<%= latest.coverUrl || 'https://picsum.photos/800/600?blur=3' %>" alt="Latest Post">
                  <div class="latest-overlay">
                    <h2>
                      <%= latest.title %>
                    </h2>
                    <div class="latest-author">by <%= latest.author ? latest.author.username : 'Unknown' %>
                    </div>
                  </div>
                </div>
              </a>
              <% } %>

                <h3 class="section-title">All Posts</h3>
                <div class="row g-3">
                  <% others.forEach(p=> { %>
                    <div class="col-md-4">
                      <a href="/posts/<%= p._id %>" class="text-decoration-none">
                        <div class="post-card">
                          <img src="<%= p.coverUrl || 'https://picsum.photos/400/300?blur=3' %>" alt="Cover">
                          <div class="post-overlay">
                            <h6>
                              <%= p.title %>
                            </h6>
                            <small>by <%= p.author ? p.author.username : 'Unknown' %></small>
                          </div>
                        </div>
                      </a>
                    </div>
                    <% }) %>
                </div>

    </main>

    <%- include('../../partials/footer') %>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>