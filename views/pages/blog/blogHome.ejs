<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Blog Home</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background: #f8f9fa;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* Hero Latest Post */
    .latest-post-card {
      position: relative;
      border-radius: 15px;
      overflow: hidden;
      margin-bottom: 30px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, .15);
    }

    .latest-post-card img {
      width: 100%;
      height: 450px;
      object-fit: cover;
    }

    .latest-overlay {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      padding: 30px;
      background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
      color: #fff;
    }

    .latest-overlay h2 {
      font-size: 2rem;
      font-weight: 700;
    }

    /* All Posts */
    .post-card {
      border-radius: 12px;
      overflow: hidden;
      background: #fff;
      box-shadow: 0 6px 18px rgba(0, 0, 0, .08);
      transition: transform .3s;
    }

    .post-card:hover {
      transform: translateY(-6px);
    }

    .post-card img {
      height: 220px;
      object-fit: cover;
      width: 100%;
    }

    .post-content {
      padding: 15px;
    }

    .post-content h6 {
      font-weight: 600;
      margin-bottom: 5px;
    }

    .post-content small {
      color: #6c757d;
    }

    /* Sidebar */
    .sidebar-card {
      background: #fff;
      border-radius: 15px;
      padding: 20px;
      margin-bottom: 25px;
      box-shadow: 0 4px 16px rgba(0, 0, 0, .1);
    }

    .sidebar-card h5 {
      font-weight: 700;
      margin-bottom: 15px;
    }

    .author-box img {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            object-fit: cover;
            margin-right: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        }
  </style>
</head>

<body>

  <!-- Header Partial -->
  <%- include('../../partials/header') %>

    <main class="container my-5">

      <!-- Editor's Picks Carousel -->
      <% if (featuredPosts && featuredPosts.length> 0) { %>
        <div id="featuredCarousel" class="carousel slide mb-5">
          <div class="carousel-inner">
            <% featuredPosts.forEach((p, i)=> { %>
              <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                <a href="/posts/<%= p._id %>">
                  <img src="<%= p.coverUrl || 'https://picsum.photos/900/400' %>" class="d-block w-100 rounded"
                    alt="...">
                  <div class="carousel-caption d-none d-md-block">
                    <h5>
                      <%= p.title %>
                    </h5>
                    <p>by <%= p.author ? p.author.username : 'Unknown' %>
                    </p>
                  </div>
                </a>
              </div>
              <% }) %>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#featuredCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#featuredCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
          </button>
        </div>
        <% } %>

          <div class="row g-4">
            <!-- All Posts -->
            <div class="col-md-8">
              <h3 class="mb-3 fw-bold">All Posts</h3>
              <div class="row g-4">
                <% (posts || []).forEach(p=> { %>
                  <div class="col-md-6">
                    <a href="/posts/<%= p._id %>" class="text-decoration-none text-dark">
                      <div class="post-card">
                        <img src="<%= p.coverUrl || 'https://picsum.photos/400/300?blur=3' %>" alt="Cover">
                        <div class="post-content">
                          <h6>
                            <%= p.title %>
                          </h6>
                          <small>by <%= p.author ? p.author.username : 'Unknown' %></small>
                        </div>
                      </div>
                    </a>
                  </div>
                  <% }) %>
              </div>
            </div>

            <!-- Sidebar -->
            <div class="col-md-4">
              <!-- Categories -->
              <div class="sidebar-card">
                <h5>Categories</h5>
                <ul class="list-unstyled mb-0">
                  <li><a href="/category/tech">Technology</a></li>
                  <li><a href="/category/lifestyle">Lifestyle</a></li>
                  <li><a href="/category/travel">Travel</a></li>
                </ul>
              </div>

              <!-- Popular Posts -->
              <div class="sidebar-card">
                <h5>Popular Posts</h5>
                <ul class="list-unstyled mb-0">
                  <% (popularPosts || []).forEach(p=> { %>
                    <li class="mb-2">
                      <a href="/posts/<%= p._id %>">
                        <%= p.title %>
                      </a>
                    </li>
                    <% }) %>
                </ul>
              </div>

              <!-- Author Spotlight -->
              <!-- Author Spotlight -->
              <% if (featuredAuthor) { %>
                <div class="sidebar-card author-box text-center">
                  <a href="/author/<%= featuredAuthor._id %>">
                    <% if (user.avatarLocal) { %>
                      <img src="/uploads/<%= user.avatarLocal %>" alt="avatar" class="avatar-img">
                      <% } else { %>
                        <div class="avatar-letter">
                          <%= (user.username && user.username[0]) ? user.username[0].toUpperCase() : 'U' %>
                        </div>
                        <% } %>
                          <h6 class="fw-bold">
                            <%= featuredAuthor.username %>
                          </h6>
                          <small class="text-muted">
                            <%= featuredAuthor.bio || "Blogger" %>
                          </small>
                  </a>
                </div>
                <% } %>


                  <!-- Recent Comments -->
                  <div class="sidebar-card">
                    <h5>Recent Comments</h5>
                    <ul class="list-unstyled">
                      <% (recentComments || []).forEach(c=> { %>
                        <li class="mb-2">
                          <small>
                            <strong>
                              <%= c.username %>:
                            </strong>
                            <%= c.body.substring(0, 40) %>...
                              <a href="/posts/<%= c.postId %>">View</a>
                          </small>
                        </li>
                        <% }) %>
                    </ul>
                  </div>

                  <!-- Tag Cloud -->
                  <div class="sidebar-card">
                    <h5>Popular Tags</h5>
                    <div>
                      <a href="/tag/design" class="badge bg-secondary m-1">Design</a>
                      <a href="/tag/ai" class="badge bg-info m-1">AI</a>
                      <a href="/tag/coding" class="badge bg-dark m-1">Coding</a>
                      <a href="/tag/marketing" class="badge bg-primary m-1">Marketing</a>
                    </div>
                  </div>

                  <!-- Newsletter -->
                  <div class="sidebar-card">
                    <h5>Subscribe</h5>
                    <form>
                      <input type="email" class="form-control mb-2" placeholder="Enter your email">
                      <button class="btn btn-primary w-100">Subscribe</button>
                    </form>
                  </div>

                  <!-- Join Community -->
                  <div class="sidebar-card text-center">
                    <h5>Join Our Community</h5>
                    <p>Follow us for daily updates:</p>
                    <a href="#" class="btn btn-outline-dark btn-sm me-2">Twitter</a>
                    <a href="#" class="btn btn-outline-primary btn-sm me-2">Facebook</a>
                    <a href="#" class="btn btn-outline-danger btn-sm">YouTube</a>
                  </div>
            </div>
          </div>
    </main>


    <%- include('../../partials/footer') %>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>