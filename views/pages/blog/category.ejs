<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Posts in <%= category %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body { background: #f8f9fa; font-family: 'Segoe UI', sans-serif; }
    .post-card { border-radius:12px; overflow:hidden; background:#fff; box-shadow:0 6px 18px rgba(0,0,0,.08); transition:.3s; }
    .post-card:hover { transform: translateY(-6px); }
    .post-card img { height:220px; object-fit:cover; width:100%; }
    .post-content { padding:15px; }
    .post-content h6 { font-weight:600; margin-bottom:5px; }
    .post-content small { color:#6c757d; }
    .sidebar-card { background:#fff; border-radius:15px; padding:20px; margin-bottom:25px; box-shadow:0 4px 16px rgba(0,0,0,.1); }
    .sidebar-card h5 { font-weight:700; margin-bottom:15px; }
  </style>
</head>
<body>

<%- include('../../partials/header') %>

<main class="container my-5">
  <div class="row g-4">

    <!-- Posts Section -->
    <div class="col-md-8">
      <h3 class="mb-3 fw-bold">Posts in <%= category %></h3>

      <!-- Featured Carousel -->
      <% if (featuredPosts && featuredPosts.length > 0) { %>
      <div id="featuredCarousel" class="carousel slide mb-4">
        <div class="carousel-inner">
          <% featuredPosts.forEach((p,i)=>{ %>
            <div class="carousel-item <%= i===0 ? 'active':'' %>">
              <a href="/posts/<%= p._id %>">
                <img src="<%= p.coverUrl || 'https://picsum.photos/900/400' %>" class="d-block w-100 rounded" alt="...">
                <div class="carousel-caption d-none d-md-block">
                  <h5><%= p.title %></h5>
                  <small>by <%= p.author ? p.author.username : 'Unknown' %></small>
                </div>
              </a>
            </div>
          <% }) %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#featuredCarousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#featuredCarousel" data-bs-slide="next">
          <span class="carousel-control-next-icon"></span>
        </button>
      </div>
      <% } %>

      <div class="row g-4">
        <% if (posts && posts.length>0){ %>
          <% posts.forEach(p=>{ %>
            <div class="col-md-6">
              <a href="/posts/<%= p._id %>" class="text-decoration-none text-dark">
                <div class="post-card">
                  <img src="<%= p.coverUrl || 'https://picsum.photos/400/300?blur=3' %>" alt="Cover">
                  <div class="post-content">
                    <h6><%= p.title %></h6>
                    <small>by <%= p.author ? p.author.username : 'Unknown' %></small>
                  </div>
                </div>
              </a>
            </div>
          <% }) %>
        <% } else { %>
          <p>No posts available in this category.</p>
        <% } %>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="col-md-4">
      <div class="sidebar-card">
        <h5>Categories</h5>
        <ul class="list-unstyled mb-0">
          <li><a href="/category/tech">Technology</a></li>
          <li><a href="/category/lifestyle">Lifestyle</a></li>
          <li><a href="/category/travel">Travel</a></li>
        </ul>
      </div>

      <% if (popularPosts && popularPosts.length>0) { %>
      <div class="sidebar-card">
        <h5>Popular Posts</h5>
        <ul class="list-unstyled mb-0">
          <% popularPosts.forEach(p=>{ %>
            <li class="mb-2"><a href="/posts/<%= p._id %>"><%= p.title %></a></li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <% if (recentComments && recentComments.length>0){ %>
      <div class="sidebar-card">
        <h5>Recent Comments</h5>
        <ul class="list-unstyled mb-0">
          <% recentComments.forEach(c=>{ %>
            <li class="mb-2"><small><strong><%= c.author %>:</strong> <%= c.body.substring(0,40) %>... <a href="/posts/<%= c.postId %>">View</a></small></li>
          <% }) %>
        </ul>
      </div>
      <% } %>

    </div>

  </div>
</main>

<%- include('../../partials/footer') %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
